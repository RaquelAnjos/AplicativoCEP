             x:Class="AppCep.MainPage" BackgroundColor="Gray">

    <StackLayout Margin="10,10,10,10" Padding="10" VerticalOptions="Center"  >
        <Entry x:Name="CEPENTRY" Placeholder="Digite um CEP" PlaceholderColor="red"/>
        <Button x:Name="BOTAO" Text="Buscar CEP" TextColor="White" BackgroundColor="Black" CornerRadius="10" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label  x:Name="RESULTADO" Text="" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>

    </StackLayout>

</ContentPage>
